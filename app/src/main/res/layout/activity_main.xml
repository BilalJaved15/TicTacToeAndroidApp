<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:onClick="playerSwitchHandler"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/switch_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="Play With Computer" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10pt"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="140pt"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_0_0"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginEnd="2pt"
            android:layout_marginRight="2pt"
            android:layout_weight="1"
            android:onClick="gameTileClickHandler"
            android:tag="button_0_0" />

        <Button
            android:id="@+id/button_0_1"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_weight="1"
            android:onClick="gameTileClickHandler"
            android:tag="button_0_1" />

        <Button
            android:id="@+id/button_0_2"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginStart="2pt"
            android:layout_marginLeft="2pt"
            android:layout_weight="1"
            android:onClick="gameTileClickHandler"
            android:tag="button_0_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="140pt"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_1_0"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginEnd="2pt"
            android:layout_marginRight="2pt"
            android:layout_weight="1"
            android:onClick="gameTileClickHandler"
            android:tag="button_1_0" />

        <Button
            android:id="@+id/button_1_1"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_weight="1"
            android:onClick="gameTileClickHandler"
            android:tag="button_1_1" />

        <Button
            android:id="@+id/button_1_2"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginStart="2pt"
            android:layout_marginLeft="2pt"
            android:layout_weight="1"
            android:onClick="gameTileClickHandler"
            android:tag="button_1_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="140pt"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_2_0"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginEnd="2pt"
            android:layout_marginRight="2pt"
            android:layout_weight="1"
            android:onClick="gameTileClickHandler"
            android:tag="button_2_0" />

        <Button
            android:id="@+id/button_2_1"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_weight="1"
            android:onClick="gameTileClickHandler"
            android:tag="button_2_1" />

        <Button
            android:id="@+id/button_2_2"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginStart="2pt"
            android:layout_marginLeft="2pt"
            android:layout_weight="1"
            android:onClick="gameTileClickHandler"
            android:tag="button_2_2" />
    </LinearLayout>

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8pt"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="btnResetClickHandler"
        android:tag="button_reset"
        android:text="Reset" />

</LinearLayout>